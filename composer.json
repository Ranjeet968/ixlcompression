{
    "name": "ranjeet968/ixlcompression",
    "description": "A Laravel package for compressing images (JPG, PNG, GIF, WebP) and PDFs (Snappy, Dompdf) using Imagick and Ghostscript.",
    "keywords": ["laravel", "compression", "image", "pdf", "imagick", "ghostscript", "snappy", "dompdf"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ranjeet\\IxlCompression\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",  
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0"
    },
    "suggest": {
        "barryvdh/laravel-snappy": "For better PDF compression (optional).",
        "dompdf/dompdf": "Alternative PDF compression method (optional).",
        "ext-imagick": "Required for image compression. Install via `sudo apt install php-imagick`.",
        "ghostscript": "Required for PDF compression. Install via `sudo apt install ghostscript`."
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ranjeet\\IxlCompression\\IxlCompressionServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "homepage": "https://github.com/ranjeet968/ixlcompression",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ranjeet968/ixlcompression"
        }
    ],
    "support": {
        "issues": "https://github.com/ranjeet968/ixlcompression/issues",
        "source": "https://github.com/ranjeet968/ixlcompression"
    }
}
